# PostgreSQL Database Configuration
POSTGRES_USER=djvoting
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=djvoting
POSTGRES_PORT=5432

# Application Configuration
APP_PORT=5000
NODE_ENV=production

# Domain Configuration (required for Dokploy/Traefik routing)
DOMAIN=your-domain.com

# PostgreSQL Connection Details (REQUIRED - used by Drizzle and app)
# These are preferred over DATABASE_URL as they handle special characters in passwords
PGHOST=postgres
PGPORT=5432
PGUSER=djvoting
PGPASSWORD=your_secure_password_here
PGDATABASE=djvoting

# Database URL (OPTIONAL - only needed if not using PG* variables)
# For Docker: use 'postgres' as hostname (internal network)
# For local development: use 'localhost'
# NOTE: If your password contains special characters like / or =, you must URL-encode them
# Or simply use the PG* variables above instead
DATABASE_URL=postgresql://djvoting:your_secure_password_here@postgres:5432/djvoting

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_key_here
