# PostgreSQL Database Configuration
POSTGRES_USER=djvoting
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=djvoting
POSTGRES_PORT=5432

# Application Configuration
APP_PORT=5000
NODE_ENV=production

# Database URL (auto-constructed from above vars in docker-compose)
# For manual deployment: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://djvoting:your_secure_password_here@localhost:5432/djvoting

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_key_here

# Optional: Enable SSL for production PostgreSQL
# PGSSLMODE=require
